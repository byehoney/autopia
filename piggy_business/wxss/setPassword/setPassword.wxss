.password-setting { height: 100vh; padding: 26rpx; background-color: #fff; }

.password-setting .password-box { width: 697rpx; height: 88rpx; margin-top: 30rpx; line-height: 88rpx; border-radius: 10rpx; border: solid 2rpx rgba(0, 0, 0, 0.1); font-size: 30rpx; font-weight: bold; letter-spacing: 0; color: #333333; }

.password-setting .password-box > view { display: inline-block; float: left; }

.password-setting .password-box .password-set-name { text-align: center; width: 186rpx; }

.password-setting .password-box .password-item { margin-top: 20rpx; height: 45rpx; line-height: 45rpx; width: 83rpx; text-align: center; border-right: solid 1rpx rgba(0, 0, 0, 0.1); }

.password-setting .password-box .password-item:last-child { border: none; }

.password-setting .password-desc { height: 66rpx; line-height: 66rpx; font-size: 25rpx; }

.password-setting .password-desc-left { font-family: PingFangSC-Regular; color: #333333; opacity: 0.39; float: left; }

.password-setting .password-desc-right { float: right; }

.password-setting .password-save-btn { margin-top: 60rpx; width: 697rpx; height: 88rpx; text-align: center; line-height: 88rpx; color: #ffffff; border-radius: 44px; }

.password-setting .password-hidden { height: 0; }

.blackTheme .password-desc-right { color: #000000; }

.blackTheme .password-save-btn { background-color: #000000; }

.redTheme .password-desc-right { color: #FA0029; }

.redTheme .password-save-btn { background-color: #FA0029; }

.orangeTheme .password-desc-right { color: #FF5C1C; }

.orangeTheme .password-save-btn { background-color: #FF5C1C; }

.blueTheme .password-desc-right { color: #0098F8; }

.blueTheme .password-save-btn { background-color: #0098F8; }

.pinkDarkTheme .password-desc-right { color: #FF007C; }

.pinkDarkTheme .password-save-btn { background-color: #FF007C; }

.purpleTheme .password-desc-right { color: #7948FD; }

.purpleTheme .password-save-btn { background-color: #7948FD; }

.brownTheme .password-desc-right { color: #B7A392; }

.brownTheme .password-save-btn { background-color: #B7A392; }
