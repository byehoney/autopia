/* pages/shoppingCat/index.wxss */
.editProduct .shoppingCatSize.size_3>wx-view .productInfo .shoppingInput text {
  display: inline-block;
  padding: 0;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #333;
  margin-right: 0;
  height: 50rpx;
  line-height: 50rpx;
}
.editProduct .shopProductList>view .productInfo text{
  padding: 0;
}
/* 2019-5-20-xq新增购物车样式 */
.shoppingCatTitle.newShopping{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.shoppingCatTitle.newShopping .editCart{
  width: 100rpx;
  text-align: right;
}
.shoppingCatTitle.newShopping .store-box{
  flex: 1;
}
.store-box{
  display: flex;
  align-items: flex-start;
  height: 60rpx;
  justify-content: start;
}
.store-box .store-name{
  font-size: 28rpx;
  max-width: 60%;
  min-width: 35%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
   margin-bottom:5rpx;

}
.store-box .icon-qiehuan{
  font-size: 28rpx;
}
.store-box .btn-change-store{
  padding: 10rpx 15rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 24rpx;
}
.editProduct .size_3 .shopProductList>view .productInfo .productName{
  margin-bottom: 10rpx;
}
.forbid-buy{
  width: 100%;
}
.forbid-buy .title{
  font-size:28rpx;
font-weight:bold;
color:#353535;
margin-top:10px;
text-indent:28rpx;
height:50rpx;
line-height:50rpx;
margin-bottom:10rpx;

}
.forbid-buy .title .iconfont{
font-size: 38rpx;
margin-left: 10rpx;
}
.shoppingChoice text.disabled-txt{
  background:#d6d5d5;
  border-radius:50%;
}
.forbid-list .shoppingCatSize .clearfix{
  background: #f7f5f5;
}
.forbid-list .size_3 .shopProductList>view.clearfix{
  border-top: 1rpx solid rgb(241, 240, 240)
}
.editProduct .shopProductList>view .productInfo view.show-tips{
  width: 100%!important;
  font-size: 24rpx!important;
  color: #f00!important;
  padding-bottom: 60rpx;

}
.shoppingCatFooter .total{
  width: 350rpx;
}
.shoppingCatFooter .settlement{
  width: 230rpx;
}
.shoppingCatFooter .settlement::after{
  border: none;
}
.shoppingCatFooter .shoppingChoice{
  width: 165rpx;
}