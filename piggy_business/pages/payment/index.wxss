.ready-submit{
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 0;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-top: 8rpx solid #f4f4f4;
  z-index: 2;
}
.ready-submit .pay-price{
  font-size: 28rpx;
  color: #353535;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.pay-price .mini-y{
  font-size: 24rpx;
}
.btn-submit{
width:200rpx;
height:100%;
border-radius:0;
color:#fff;
font-size:32rpx;
text-align:center;
line-height:83rpx;
letter-spacing: 4rpx;
}
.expand-h{
  height: 120rpx;
  color: transparent;
  background:transparent;
}
.pay-type-contain{
   width: 100%;
