}
.customMessage .input.msg{
  width: 500rpx;
  border: 1rpx solid #f4f4f4;
}
.paymentProduct{
  margin-top: 20rpx;
}
.shoppingProduct.shoppingPayment .shoppingInfo .shoppingName{
  margin-bottom: 15rpx!important;
  color: #353535;
}
.n_store{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  height: 140rpx;
  background: #fff;

}
.n_store .logo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 13rpx;
}
.n_store .addressInfo .store_name{
  font-size: 28rpx;
  color: #353535;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.n_store .addressInfo .store_address{
  font-size: 24rpx;
  color: #b5b5b5;
  width: 100%;
}
.n_store .addressInfo .store_time{
  font-size: 24rpx;
  color: #b5b5b5;
  width: 100%;
}
.n_store .call-box{
  width: 80rpx;

}
.user-info{
  margin-bottom: 10rpx;
}
.user-info>text{
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
}
.addressInfo .address{
  color: #666;
}
.paymentProduct .shopName{
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.shoppingProduct{
  padding: 19rpx 20rpx!important;
}
.list-slide-down,.msg-box{
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #f4f4f4;
  position: relative;
}

.list-slide-down .slid-txt{
  color: #acadad;
  font-size: 28rpx;
}
.list-slide-down .slid-txt .iconfont{
  margin-left: 10rpx;
  font-size: 24rpx;
}
.list-slide-down .btnSendMsg,.msg-box .btnSendMsg{
  width: 128rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -25rpx;
  border: 1rpx solid #f4f4f4;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.box-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  font-size: 28rpx;
  color: #666666;
  text-indent: 20rpx;
  margin-top: 20rpx;
}

