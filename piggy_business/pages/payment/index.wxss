/* pages/payment/index.wxss */
@import "../../wxss/payment/cash-pay.wxss";
/* 2019-5-22-xq-新增 */
.newPosta.paymentPostage>view{
  margin: 0;
  border-bottom:1rpx solid #ebeaea;
  padding-bottom:0;
}
.newPosta.paymentPostage>view view{
  
width:202rpx;
height:55rpx;
margin:10rpx 20rpx;
font-size:26rpx;
line-height:55rpx;
background:#fff;
border-radius:5rpx;
margin-left:0rpx;
border:1rpx dashed #cecbcb;
}
.payment .address{
  margin-top: 0;
  position:relative;
  height:150rpx;
  padding:0 20rpx;
  padding-top:20rpx;
  font-size:28rpx;
  background:#fff;
  box-sizing:border-box;
}
.order-info{
  width: 100%;
  box-sizing: border-box;
  padding:0;
  padding-left: 22rpx;
  background: #fff;
  /* margin-top: 20rpx; */
}
.order-info .container {
  width: 100%;
  height: 75rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  border-bottom: 1rpx solid #f1f1f2;
  background: #fbfbfd;

}
.order-info .container .name{
  font-size: 28rpx;
  color: #999999;
  height: 75rpx;
  line-height: 75rpx;

}
.order-info .container .value{
  font-size: 24rpx;
  color: #010000;
  height: 75rpx;
  line-height: 75rpx;
  margin-right: 20rpx;

}
.paymentInfo.newPayInfo{
  padding: 0;
  padding-left: 20rpx;
}
.paymentInfo.newPayInfo .customMessage{
  height: 75rpx;
  border-bottom: 1rpx solid #f1f1f2;
  line-height: 75rpx;
  background: #fbfbfd;
  margin-right: 20rpx;

}
.paymentInfo.newPayInfo .customMessage .input:last-child{
  line-height: 75rpx;
  height: 75rpx;
}
.paymentInfo.newPayInfo .customMessage .input:last-child>input{
  height: 100%;
}
.paymentInfo.newPayInfo .customMessage .input .section{
  box-shadow: 0 0 10rpx rgba(53, 52, 52, 0.1)
}
.shoppingProduct{
  margin-bottom: 0;
}

