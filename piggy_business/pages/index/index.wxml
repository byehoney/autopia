          </view>
        </view>
      </navigator>
    </view>
    <view class='commander-card' wx:else>
      <view class='commander-card-top'>
        <text class="iconfont icon-touxiang default_user" style="color:{{themeColorValue}}"></text>
        <view class='commander-card-right'>
