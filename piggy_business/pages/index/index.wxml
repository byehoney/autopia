    <view class='commander-card' wx:if="{{ _unlogin==false}}">
      <view class='commander-card-top'>
        <image class='commander-card-icon' src='{{nowGrouperData.leader.avatar}}'></image>
        <view class='commander-card-address'>
          <text>{{nowGrouperData.leader.nickname}}</text>
          <text>{{nowGrouperData.leader.address}}</text>
        </view>
        <view class='commander-card-opeartion'>
          <view class='commander-card-item' wx:if="{{shopHomeData.custom_field_list[0].content.title != nowGrouperData.leader.user_name}}">
            <navigator url='/pages/groupbuying/community/community' hover-class='none' open-type='navigate'>
              <image src="../../images/comman.png"></image>
              <text>附近团长</text>
            </navigator>
          </view>
          <view class='commander-card-item' bindtap="copyBtn" wx:if="{{false}}">
            <image src="../../images/copy.png"></image>
            <text>一键复制</text>
          </view>
        </view>
      </view>
      <navigator url='/pages/groupbuying/joinperson/joinperson' hover-class='none' open-type='navigate' wx:if="{{nowGrouperData.buy_list.length>0}}">
