/* pages/inviteShip/inviteShip.wxss */
page{
  background-color: #F8F8F8;
}
.inviteMe,.myInvite{
  background-color: #fff;
  margin-top: 30rpx;
}
.inviteHead{
  display: flex;
  padding: 30rpx 40rpx 27rpx;
  justify-content: space-between;
  align-items: center;
  font-size:38rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:53rpx;
  border-bottom: 2rpx solid #F3F4F5;
}
.inviteHead .reward{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(244,58,65,1);
  line-height:40rpx;
}
.inviteBody .inviteItem{
  padding: 20rpx 40rpx 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 40rpx;
  border-bottom: 2rpx solid #F3F4F5;
}
.inviteBody .inviteItem .right{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(155,155,155,1);
  line-height:33rpx;
}
.inviteBody .inviteItem:last-child{
  border-bottom: none;
}
.inviteBody .inviteItem .left{
  display: flex;
  align-items: center;
}
.inviteBody .atv{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.inviteBody  .nickName{
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  margin-bottom: 5rpx;
}
.inviteBody .time{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(155,155,155,1);
  line-height:33rpx;
}
.tip{
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(74,74,74,1);
  line-height:30rpx;
  text-align: center;
  margin: 30rpx auto;
}
.noInvite{
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(155,155,155,1);
  line-height:40rpx;
}
.noInvite .btn{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(244,58,65,1);
  line-height:40rpx;
  text-decoration: underline;
  margin-left: 14rpx;
  display: inline-block;
  padding:0; 
  background-color: transparent;
  margin-right: 0;
}
.noInvite .btn::after{
  display: none;
}

